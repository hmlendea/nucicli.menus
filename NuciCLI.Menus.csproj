    <RootNamespace>NuciCLI.Menus</RootNamespace>
    <Version>1.5.3</Version>
    <Description>NuciCLI Menu management system</Description>
    <Authors>Horațiu Mlendea</Authors>
    <Copyright>Copyright 2025 © Horațiu Mlendea</Copyright>
    <RepositoryUrl>https://github.com/hmlendea/nucicli.menus</RepositoryUrl>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <PackageTags>Console Terminal CLI</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NuciCLI" Version="2.0.1" />
    <PackageReference Include="NuciExtensions" Version="5.2.0" />
  </ItemGroup>

</Project>
